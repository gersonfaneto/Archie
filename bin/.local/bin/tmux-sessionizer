#!/usr/bin/env fish

set -l base_targets "$HOME/Developer" "$HOME/Developer/Personal"

set -l found_directories (find $base_targets -mindepth 1 -maxdepth 1 -type d)
set -a found_directories "$HOME/Notes"

set selected (echo $found_directories | tr ' ' '\n' | fzf-tmux -p)

if test -z $selected
  return 0
end

set selected_name (basename $selected | tr . _)

tmux new-session -ds $selected_name -c $selected &>>/dev/null
tmux switch-client -t $selected_name &>>/dev/null
