{
    "editor.fontFamily": "'Comic Mono', 'Droid Sans Mono', 'monospace', monospace",
    "editor.fontLigatures": true,
    "editor.fontSize": 18,

    "workbench.colorTheme": "GitHub Dark Default",
    "workbench.iconTheme": "eq-material-theme-icons-darker",
    "workbench.startupEditor": "none",

    "editor.minimap.enabled": false,

    "window.restoreWindows": "none",

    "window.openFoldersInNewWindow": "off",
    "window.openFilesInNewWindow": "off",

    "window.titleBarStyle": "custom",
    "window.title": "${appName}",

    "terminal.integrated.fontFamily": "'Iosevka'",
    "terminal.integrated.fontSize": 18,

    "doxdocgen.generic.authorEmail": "gersonfaneto.dev@gmail.com",
    "doxdocgen.generic.authorName": "Gerson Ferreira",
    "doxdocgen.file.versionTag": "@version 1.0.0",
    "doxdocgen.generic.dateFormat": "DD-MM-YYYY",
}
