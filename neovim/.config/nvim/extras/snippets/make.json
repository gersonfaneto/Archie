{
  "Basic Makefile": {
    "prefix": "basic",
    "body": [
      "CC=cc",
      "CFLAGS=-Wall -Werror -Wextra",
      "SOURCE=$1",
      "OUTPUT=$2",
      "",
      "all: build",
      "",
      "build:",
      "	@echo 'Building...'",
      "	@$(CC) $(SOURCE) -o $(OUTPUT) $(CFLAGS)",
      "",
      "run:",
      "	@echo 'Running...'",
      "	@./$(OUTPUT)",
      "",
      "clean:",
      "	@echo 'Cleaning...'",
      "	@rm -f $(OUTPUT)",
      "",
      ".PHONY: all build run clean"
    ],
    "description": "Basic structure for a Makefile."
  }
}
